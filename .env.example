# ===========================================
# WNSC v2 Environment Configuration
# ===========================================
# Copy this file to .env (for Prisma) and .env.local (for Next.js)
# Replace placeholder values with your actual credentials

# -------------------------------------------
# Database (Required)
# -------------------------------------------
# Get from https://neon.tech or your PostgreSQL provider
DATABASE_URL="postgresql://user:password@host.neon.tech/database?sslmode=require"

# -------------------------------------------
# Authentication Secrets (Required)
# -------------------------------------------
# Generate with: openssl rand -base64 32
# Or PowerShell: [Convert]::ToBase64String((1..32 | ForEach-Object { Get-Random -Minimum 0 -Maximum 256 }))
JWT_SECRET="your-secret-key-minimum-32-characters-long"
SESSION_SECRET="your-session-secret-minimum-32-characters"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-minimum-32-characters"

# -------------------------------------------
# Encryption Key (Optional)
# -------------------------------------------
# Used for encrypting sensitive data (Gmail credentials) in database
# Falls back to JWT_SECRET if not set
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-encryption-key-minimum-32-characters"

# -------------------------------------------
# Google reCAPTCHA v3 (Required for contact form)
# -------------------------------------------
# Get from https://www.google.com/recaptcha/admin/create
RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# -------------------------------------------
# Gmail API (Optional - can be configured via Admin Panel)
# -------------------------------------------
# These are fallback values if not configured in Admin > Settings > Email
# Preferred method: Configure via Admin Panel with OAuth flow
# Manual setup: https://console.cloud.google.com/ -> Enable Gmail API -> OAuth 2.0
GMAIL_CLIENT_ID="your-gmail-client-id.apps.googleusercontent.com"
GMAIL_CLIENT_SECRET="your-gmail-client-secret"
GMAIL_REDIRECT_URI="https://developers.google.com/oauthplayground"
GMAIL_REFRESH_TOKEN="your-gmail-refresh-token"

# -------------------------------------------
# Email Addresses
# -------------------------------------------
ADMIN_EMAIL="admin@example.org"
NOTIFICATION_EMAIL="notifications@example.org"

# -------------------------------------------
# Upload Configuration
# -------------------------------------------
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# -------------------------------------------
# Analytics (Optional)
# -------------------------------------------
NEXT_PUBLIC_GA_ID=""

# -------------------------------------------
# Environment
# -------------------------------------------
NODE_ENV="development"
PORT="3000"
